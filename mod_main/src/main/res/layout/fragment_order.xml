<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/_272C2C">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="Pesanan"
            android:textColor="@color/_e5e5e5"
            android:textSize="@dimen/dp_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_umpan_balik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_umpan_balik"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/shape_solid_ff27271f_r12"
            app:layout_constraintTop_toBottomOf="@id/iv_umpan_balik" />

        <TextView
            android:id="@+id/tv_pesanan_saat_ini"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_46"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@drawable/selector_order_tab_bg"
            android:gravity="center"
            android:text="Pesanan saat ini"
            android:textColor="@drawable/selector_order_tab_color"
            android:textSize="@dimen/dp_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_umpan_balik"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".45" />

        <TextView
            android:id="@+id/tv_riwayat_pesanan"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_46"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/selector_order_tab_bg"
            android:gravity="center"
            android:text="Riwayat pesanan"
            android:textColor="@drawable/selector_order_tab_color"
            android:textSize="@dimen/dp_16"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_umpan_balik"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".45" />

        <FrameLayout
            android:id="@+id/fl_order_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@id/tv_pesanan_saat_ini" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

    </data>

</layout>