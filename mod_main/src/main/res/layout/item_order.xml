<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item_bg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_solid_ff191d1d_r20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16">

        <ImageView
            android:id="@+id/iv_item_tou"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go 001"
            android:textColor="@color/_e5e5e5"
            android:textSize="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="@id/iv_item_tou"
            app:layout_constraintLeft_toRightOf="@+id/iv_item_tou"
            app:layout_constraintTop_toTopOf="@+id/iv_item_tou" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_25"
            android:text="Sedang ditransfer>"
            android:textColor="@color/_e5e5e5"
            android:textSize="@dimen/dp_15"
            app:layout_constraintBottom_toBottomOf="@id/iv_item_tou"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_item_tou" />\

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_item_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:background="@drawable/shape_solid_ff040404_r10"
            app:layout_constraintTop_toBottomOf="@id/iv_item_tou">

            <TextView
                android:id="@+id/tv_item_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="Rp10,000"
                android:textColor="@color/_e5e5e5"
                android:textSize="@dimen/dp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="Jumlah pinjaman"
                android:textColor="@color/_9B9B9B"
                android:textSize="@dimen/dp_12"
                app:layout_constraintLeft_toLeftOf="@+id/tv_item_rb"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_rb" />

            <TextView
                android:id="@+id/tv_item_tempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_16"
                android:text="03-04-2022"
                android:textColor="@color/_e5e5e5"
                android:textSize="@dimen/dp_14"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Aplikasi"
                android:textColor="@color/_9B9B9B"
                android:textSize="@dimen/dp_12"
                app:layout_constraintLeft_toLeftOf="@+id/tv_item_tempo"
                app:layout_constraintRight_toRightOf="@+id/tv_item_tempo"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_tempo" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginRight="@dimen/dp_38"
        android:text="*Pesanan sudah lewat jatuh tempo, harap segera dilunasi untuk menghindari bunga pinalti yang lebih besar"
        android:textColor="@color/_fff55323"
        android:textSize="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/cl_item_bg1"
        />
</androidx.constraintlayout.widget.ConstraintLayout>